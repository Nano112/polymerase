{
  "name": "@polymerase/core",
  "version": "0.1.0",
  "description": "Core execution engine for Polymerase - isomorphic schematic processing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker/index.d.ts",
      "import": "./dist/worker/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "mitt": "^3.0.1",
    "zod": "^3.24.4"
  },
  "peerDependencies": {
    "nucleation": "^0.1.134",
    "synthase": "^1.0.3"
  },
  "peerDependenciesMeta": {
    "nucleation": {
      "optional": true
    },
    "synthase": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.15.31",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}

